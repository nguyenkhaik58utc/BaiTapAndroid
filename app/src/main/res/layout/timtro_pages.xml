<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerTimTro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/cancelTimTro"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_cancel_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng bài"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/cancelTimTro"
            app:layout_constraintRight_toLeftOf="@+id/submitTimTro"
            android:textSize="28dp"
            android:layout_marginTop="5dp"></TextView>

        <TextView
            android:paddingRight="10dp"
            android:id="@+id/submitTimTro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xong"
            android:textSize="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewTimTro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm Phòng Trọ"
        app:layout_constraintTop_toBottomOf="@id/headerTimTro"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp" />

    <TextView
        android:id="@+id/textViewKhuVucTimTro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khu Vực"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTimTro"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtKhuVucTimTro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nhập khu vực"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewKhuVucTimTro"
        app:layout_constraintLeft_toRightOf="@+id/textViewKhuVucTimTro"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/textViewGiaPhongTimTro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá Phòng"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewKhuVucTimTro"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtGiaPhongTimTro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nhập giá phòng"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewGiaPhongTimTro"
        app:layout_constraintLeft_toRightOf="@+id/textViewGiaPhongTimTro"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/textViewMoTaTimTro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewGiaPhongTimTro"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtMoTaTimTro"
        android:layout_width="366dp"
        android:layout_height="86dp"
        android:layout_marginLeft="20dp"
        android:hint="Nhập mô tả"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewMoTaTimTro" />


</androidx.constraintlayout.widget.ConstraintLayout>