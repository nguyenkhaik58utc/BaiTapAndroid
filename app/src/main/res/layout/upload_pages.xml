<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/FragmentUpload">

    <TextView
        android:id="@+id/uploadPages_menu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Chọn danh mục"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <View
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="3dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadPages_menu1" />

    <LinearLayout
        android:id="@+id/LinearImage"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadPages_menu1">

        <ImageView
            android:id="@+id/ImageThueTro"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_home_black_24dp"></ImageView>

        <ImageView
            android:id="@+id/ImageTimTro"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/ic_search_black_24dp"></ImageView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearImage">

        <TextView
            android:id="@+id/txtThueTro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cho Thuê Trọ"
            android:textSize="26dp"></TextView>

        <TextView
            android:id="@+id/txtTimTro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Tìm Trọ"
            android:textSize="26dp"></TextView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>