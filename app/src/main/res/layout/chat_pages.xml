<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerChatPages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imgSearchChatPages"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_search_black_24dp"></ImageView>

        <EditText
            android:id="@+id/txtSearchChatPages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="search"
            app:layout_constraintLeft_toRightOf="@id/imgSearchChatPages"
            app:layout_constraintTop_toTopOf="parent"></EditText>

        <ImageView
            android:id="@+id/imgNewChat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_chat_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.533" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="Chat"
            android:textSize="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/imgNewChat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtAllChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerChatPages"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Tất cả"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imgAllChat"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        app:layout_constraintLeft_toRightOf="@id/txtAllChat"
        app:layout_constraintTop_toBottomOf="@id/headerChatPages"></ImageView>

    <ListView
        android:id="@+id/lstChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtAllChat"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>